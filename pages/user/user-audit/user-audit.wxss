page {
    font-size: 28rpx;
    background: #f0f0f0;
}
.component {
    margin: 30rpx 40rpx 0 40rpx;
    box-sizing: border-box;
    padding: 30rpx 30rpx 0rpx 30rpx;
    width: 670rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
}

.component_title {
    font-weight: 600;
    font-size: 42rpx;
    margin-bottom: 20rpx;
}

.component_flex {
    display: flex;
    align-items: center;
    color: #777;
}

.component_flex image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 14rpx;
}

.underline {
    height: 4rpx;
    background: #f1f2f4;
   
}

.component_fooder {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 116rpx;
}
.component button:not([size='mini']) {
    min-height: 72rpx;
    /* width: 128rpx; */
    margin-left: auto;
    margin-right: auto;
}
.btn_class{
    width:128rpx !important;
    height:72rpx !important;
}
.body {
    margin: 40rpx;
    padding: 30rpx;
    width: 670rpx;
    height: 220rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    box-sizing: border-box;
}

.body_head {
    font-weight: 500;
    font-size: 36rpx;
    display: flex;
    justify-content: space-between;
}

.body_body {
    margin: 20rpx 0 10rpx 0;
    font-size: 28rpx;
}

.body_fooder {
    margin-bottom: 26rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
}
.header_off {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    background: #fff;
    justify-content: center;
}